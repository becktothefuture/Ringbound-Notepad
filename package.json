{
  "name": "ringbound-notepad",
  "version": "1.0.0",
  "description": "Interactive 3D portfolio notebook with realistic page flipping",
  "main": "codebase/src/index.html",
  "type": "module",
  "scripts": {
    "build": "cd codebase && node build.cjs",
    "serve": "live-server --port=3000 --wait=500 --no-cache --browser=chrome --verbose codebase/dist",
    "dev": "npm run build && npm run serve",
    "start": "npm run dev"
  },
  "keywords": [
    "portfolio",
    "3d",
    "interactive",
    "notebook",
    "webgl"
  ],
  "author": "Alexander Beck",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ]
} 