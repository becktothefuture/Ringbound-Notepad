{
  "name": "ring-bound-notepad",
  "version": "1.0.0",
  "description": "A GPU-accelerated, 3D notepad effect that simulates the tactile experience of flipping through a spiral-bound notebook",
  "main": "src/index.html",
  "type": "module",
  "scripts": {
    "start": "serve dist -l 3000",
    "build": "node scripts/generatePortfolioJson.js && node scripts/generatePages.js && node build.cjs",
    "build:watch": "concurrently \"node scripts/generatePortfolioJson.js --watch\" \"node scripts/generatePages.js --watch\" \"node build.cjs --watch\"",
    "dev": "concurrently \"npm:build:watch\" \"npm:start\"",
    "lint": "eslint src/js/**/*.js",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "generate-portfolio": "node scripts/generatePortfolioJson.js",
    "validate": "node scripts/validate-specification.js",
    "validate:verbose": "node scripts/validate-specification.js --verbose"
  },
  "keywords": [
    "3d",
    "animation",
    "notebook",
    "webgl",
    "interactive"
  ],
  "author": "Alex Beck",
  "license": "MIT",
  "devDependencies": {
    "ajv": "^8.12.0",
    "chokidar": "^4.0.3",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.5",
    "esbuild-node-externals": "^1.4.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "serve": "^14.2.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
